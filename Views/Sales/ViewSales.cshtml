
@model IEnumerable<progPart2.Models.SalesEdit>


<h1>View</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                total sales
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleTotal)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>