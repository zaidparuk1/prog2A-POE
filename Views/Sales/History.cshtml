
@model IEnumerable<progPart2.Models.SaleDetails>

    <div class="card-deck">
        @foreach (var item in Model)
        {

          
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    <h1>@item.Product.ProductName</h1>
                </div>
                <div class="card">
                    @{
                        var base64 = Convert.ToBase64String(item.Product.ProductImage);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src="@imgSrc" height="180" width="340" />
                </div>

                <div class="card-body">
                    <h5 class="card-title">you purchase @item.Sale.TotalSales of this item </h5>

                    <p>cost of product is @item.Product.ProductPrice</p>



                </div>
                <div class="card-footer text-muted">
                    @Html.DisplayFor(modelItem => item.Product.Productcategory)
                </div>
            </div>




        }

    </div>





<style>
    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
        border: 1px solid #ddd;
    }

        .pagination a.active {
            background-color: #4CAF50;
            color: white;
            border: 1px solid #4CAF50;
        }

        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
</style>
